<section>
  <%= form_for @post do |f| %>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_field :body %>
    </div>

    <p class="notice"><%= notice %></p>

    <div class="actions">
      <%= f.submit %>
    </div>

  <% end %>
</section>

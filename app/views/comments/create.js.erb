$('#comment_body').val('');
if (<%= @comment.valid? %>){
  $("#all-comments").append("<%= comment_body(@comment) %>");
}
else{
  var t = document.getElementById('comment_body');
  t.style.backgroundColor='rgba(255,0,0,0.3)';
  $("<%= escape_javascript(render(partial: 'comments/error_comments')) %>").appendTo("#comments");
}

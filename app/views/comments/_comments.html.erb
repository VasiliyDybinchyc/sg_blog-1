<h2>Comments</h2>
<div id="all-comments">
   <% @post.comments.each do |comment| %>
    <div id=<%= "comment-#{comment.id}" %> >
      <%= comment_body(comment) %>
    </div>
   <% end %>
 </div>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build], remote: true) do |f| %>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, class: "form-control", rows: "4"  %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
